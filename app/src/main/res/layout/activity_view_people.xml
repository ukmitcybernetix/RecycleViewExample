<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/horizontal_margin_detail"
    android:paddingRight="@dimen/horizontal_margin_detail"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewPeople">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_gambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="@string/people_image" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_margin_detail"
            android:layout_marginLeft="@dimen/horizontal_margin_detail"
            android:layout_marginRight="@dimen/horizontal_margin_detail"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/people_example"
            android:textSize="@dimen/ukuran_judul"/>

        <TextView
            android:id="@+id/tv_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/horizontal_margin_detail"
            android:layout_marginRight="@dimen/horizontal_margin_detail"
            android:lineSpacingMultiplier="1"
            android:text="@string/ini_adalah_deskripsi"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</ScrollView>